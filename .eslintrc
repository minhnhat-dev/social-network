{
    "extends": ["react-app", "prettier"],
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "arrowParens": "avoid",
                "semi": false,
                "trailingComma": "none",
                "endOfLine": "lf",
                "tabWidth": 4,
                "printWidth": 120,
                "useTabs": false
            }
        ],
        "no-console": "warn"
    }
}
